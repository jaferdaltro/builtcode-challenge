
<%= form_with(model:@patient, local: true) do |form|%>
  <% if@patient.errors.any? %>
    <%@patient.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end%>
  <% end%>
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="form-group">
        <%=form.label :name, 'Nome:' %>
        <%=form.text_field :name, class:"form-control" %>
      </div>
      <div class="form-group">
        <%=form.label :cpf, 'CPF:' %>
        <%= form.text_field :cpf, class:"form-control" %> 
      </div>
      <div class="form-group">
        <%=form.label :birth_date, 'Data de Nascimento:' %>
        <%=form.date_field :birth_date, class:"form-control" %>
      </div>

      <div class="actions">
        <%= form.submit "Enviar",  class: "btn btn-primary mt-3"  %>
      </div>
    </div>
</div>

<% end%>
