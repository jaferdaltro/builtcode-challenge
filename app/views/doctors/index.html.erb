<h1 class="text-center mt-4">Nossos Médicos</h1>
<table class="table">
   <thead>
      <tr>
        <th scope="col">CRM</th>
        <th scope="col">Nome</th>
        <th scope="col">Editar</th>
        <th scope="col">Remover</th>
      </tr>
    </thead>
    <tbody>
    <% @doctors.each do |doctor|%>
      <tr>
        <td><%= doctor.crm_with_uf %></td>
        <td><%= doctor.name %></td>
        <td>
          <%= link_to edit_doctor_path(doctor), class:"btn btn-primary btn-circle" do %>
            <i class="bi bi-pencil"></i>
          <% end %>
        </td>
        <td>
          <%= link_to doctor_path(doctor), method: :delete, data: {confirm: "Tem certeza?"},class:"btn btn-primary btn-circle" do %>
            <i class="bi bi-trash"></i>
          <% end %>
        </td>
      </tr>
    <% end%>
    </tbody>
    </table>

<%= raw pagy_bootstrap_nav(@pagy) %>
<div class="row justify-content-center">
  <%= link_to "Novo Médico", new_doctor_path, class: "btn btn-primary col-2" %>
</div>
  